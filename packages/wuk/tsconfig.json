{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strictPropertyInitialization": false,
    "jsx": "react"
  },
  "exclude": [
    "node_module",
    "lib"
  ],
  "include": [
    "./src/**/*.*",
    "__tests__/**/*.ts"
  ]
}